@model ContatoModel

<div>
    @if (TempData["MensagemErro"] != null) {
        <div class="alert alert-danger text-center" role="alert" >
            <button type="button" class="btn-close" id="alert-vermelho" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
</div>


<div>
    <h1 class="display-4 text-center">
        Adicionar Contato
    </h1>
    <form method="post" asp-controller="Contatos" asp-action="Criar">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o seu nome">
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <br />

        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite o seu email">
            @Html.ValidationMessageFor(model => model.Email)

        </div>
        <br />

        <div class="form-group">
            <label  for="celular">Celular</label>
            <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o seu número">
            @Html.ValidationMessageFor(model => model.Telefone)

        </div>
        <br />

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a role="button" class="btn btn-secondary" asp-controller="Contatos" asp-action="index" >Voltar</a>
        </div>

    </form>

</div>