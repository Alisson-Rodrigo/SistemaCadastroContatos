@model UserModel
<div class="text-center">
    <h1 class="mb-3">
        Deseja confirmar a remoção do usuário: @Model.name?
    </h1>

    <div>
        <a class="btn btn-success me-2" role="button" asp-controller="Usuarios" asp-route-id="@Model.id" asp-action="Apagar">Sim</a>
        <a class="btn btn-danger" role="button" asp-controller="Usuarios" asp-action="index">Não</a>
    </div>
</div>
