@model UserModel

<div>
    <h1 class="display-4 text-center">
        Adicionar Usuário
    </h1>
    <form method="post" asp-controller="Usuarios" asp-action="Criar">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" asp-for="name" class="form-control" placeholder="Digite o seu nome">
            @Html.ValidationMessageFor(model => model.name)
        </div>
        <br />

        <div class="form-group">
            <label for="email">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite o seu email">
            @Html.ValidationMessageFor(model => model.Email)

        </div>
        <br />

        <div class="form-group">
            <label  for="celular">Usuario</label>
            <input type="text" asp-for="Login" class="form-control" placeholder="Digite o seu login">
            @Html.ValidationMessageFor(model => model.Login);
        </div>

        <div class="form-group">
            <label  for="perfil">Perfil</label>
            <select asp-for="Perfil" class="form-control">
                <option value="1">Administrador</option>
                <option value="2">Usuário</option>
            @Html.ValidationMessageFor(model => model.Login);
            </select>
        </div>
        <div class="form-group">
            <label  for="senha">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a sua senha">
            @Html.ValidationMessageFor(model => model.Senha);
        </div>

        <br />

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a role="button" class="btn btn-secondary" asp-controller="Usuarios" asp-action="index" >Voltar</a>
        </div>

    </form>

</div>