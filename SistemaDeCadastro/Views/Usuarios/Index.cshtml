@model List<UserModel>
@{
    ViewData["Title"] = "Listagem de Usuários";
}


<div>
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-center" role="alert">
            <button type="button" class="btn-close" id="alert-verde" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null) {
        <div class="alert alert-danger text-center" role="alert" >
            <button type="button" class="btn-close" id="alert-vermelho" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
</div>
<div class="text-center"> 
    <h1 class="display-4">Listagem de Usuários</h1>

    <table class="table" id="table-usuarios">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Login</th>
                <th scope="col">Email</th>
                <th scope="col">Data de Criação</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
             @if (Model != null && Model.Any())
            {
                foreach (UserModel item in Model)
                {
                    <tr>
                        <th scope="row">1</th>
                        <td>@item.name</td>
                        <td>@item.Login</td>
                        <td>@item.Email</td>
                        <td>@item.DataCriacao</td>
                        <td>
                            <a role="button" class="btn btn-primary" asp-route-id="@item.id" asp-controller="Usuarios" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@item.id" asp-controller="Usuarios" asp-action="ApagarConfirmacao">Excluir</a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>